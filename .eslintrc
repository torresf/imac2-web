{

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false,
    "describe": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true,
    "it": true,
    "expect": true,
    "sinon": true
  },

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": [
    "fp",
    "react",
    "import"
  ],

  "rules": {
    "camelcase": "off",
    "no-const-assign": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-trailing-spaces": "warn",
    "eol-last": "warn",
    "quotes": "warn",
    "valid-typeof": "warn",
    "fp/no-unused-expression": "off",
    "fp/no-nil": "off",
    "no-unused-vars": [2, { "varsIgnorePattern": "h" }],
    "react/jsx-uses-vars": "warn"
  },

  "extends": ["standard", "plugin:fp/recommended"]
}
